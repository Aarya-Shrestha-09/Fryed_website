    <script>
        // Set dynamic date on load
        document.getElementById('current-date').innerText = new Date().toLocaleDateString();

        // Multi-page navigation function
        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page-content').forEach(p => p.classList.add('hidden-page'));
            // Reset nav buttons
            document.querySelectorAll('.nav-btn').forEach(b => b.classList.remove('active'));
            
            // Show requested page
            const targetPage = document.getElementById(pageId + '-page');
            if(targetPage) targetPage.classList.remove('hidden-page');
            
            // Highlight current button
            const navBtn = document.getElementById('nav-' + pageId);
            if(navBtn) navBtn.classList.add('active');
            
            window.scrollTo(0, 0);
        }

        // Parallax effect for the diner checkered background
        window.addEventListener('scroll', () => {
            const scrolled = window.pageYOffset;
            document.body.style.backgroundPosition = `0 ${scrolled * 0.2}px`;
        });
    </script>
